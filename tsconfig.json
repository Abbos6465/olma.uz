{
  "include": [
    "./env.d.ts",
    "./src/**/*",
    "./src/**/*.vue"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
